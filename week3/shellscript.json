	"Add Shebang": {
		"scope": "sh",
		"prefix": "shebang",
		"body": [
			"#!/bin/bash",
		],
		"description": "Adds Shebang Script Head"
	}

	"Add Colours": {
		"prefix": "Colour",
		"body": [
			"Black='\\033[30m'",
			"Red='\\033[31m'",
			"Green='\\033[32m'",
			"Brown='\\033[33m'",
			"Blue='\\033[34m'",
			"Purple='\\033[35m'",
			"Cyan='\\033[36m'",
			"Gray='\\033[37m'",
			"NC='\\033[0m'"
		],
		"description": "adds in colours"
	}

	"Script Details": {
		"prefix": "Script Details"
		"body": [
			"#Author: Tyler Vivian",
			"#Creation Date: ",
			"#Last Modified: ",
			"#Description: ",
		],
		"description": "Puts in the stuff at the top of the script"
	}


}
